        </StackPanel>-->


        <!-- Heading Section -->
        <!--<StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label    FontSize="20" FontWeight="Bold" Content="Seller"/>
            <Button  Margin="600,5,0,5" FontSize="15" FontWeight="Bold" Content="Delete" Width="150" Click="DeleteButton_Click"/>
        </StackPanel>-->

        <DataGrid Grid.Row="5" x:Name="SellerGrid" ItemsSource="{Binding SellersOC}" AutoGenerateColumns="False"  Width="850" Margin="50,30,50,10" Grid.RowSpan="2" CanUserAddRows="False" HeadersVisibility="Column" MaxHeight="400" VerticalScrollBarVisibility="Auto">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold" ></Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="SNo" Binding="{Binding SerialNumber}"></DataGridTextColumn>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}"></DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"></DataGridTextColumn>
                <DataGridTextColumn Header="SellerType" Binding="{Binding SellerType}"></DataGridTextColumn>

                <DataGridTemplateColumn Header="Approve/Delete">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>

                                <StackPanel Orientation="Horizontal">

                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsVerified}" Value="True" >
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <Label Content="Approved"></Label>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsVerified}" 
                                    Value="False" >
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <Button Content="Approve" Click="ApproveButton_Click" CommandParameter="{Binding SellerID}"/>
                                    <Button Content="Delete" Click="DeleteButton_Click" CommandParameter="{Binding SellerID}"/>
                                </StackPanel>
                            </StackPanel>
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
